/*Table: exercise.records
Display: ID, Capital_Gain and create a new
Column Bonus, which contains an amount equal
to 10% of the Capital_Gain*/

select id, Capital_gain, .1*capital_gain as bonus
from exercise.records;

/*Table: exercise.records
Create a table Exercise.TEMP:
ID, Capital_Gain and Bonus*/

CREATE TABLE exercise.TEMP AS
SELECT ID,capital_gain,.1*capital_gain as bonus
FROM exercise.records;

/*Using the previous query:
Display: only those employees who receive
bonuses greater than $200*/
select id, Capital_gain, .1*capital_gain as bonus
from exercise.records
where bonus >200;